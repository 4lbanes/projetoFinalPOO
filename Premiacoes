package Entidades;

import java.util.ArrayList;

public class Premiacoes {
	private ArrayList<Jogador> mvp;
	private ArrayList<Jogador> dpoy;
	private ArrayList<Jogador> jogadores;
	private TemporadaRegular temporadaRegular;

	 public Premiacoes(ArrayList<Jogador> jogadores, TemporadaRegular temporadaRegular) {
	        this.mvp = new ArrayList<Jogador>();
	        this.dpoy = new ArrayList<Jogador>();
	        this.jogadores = jogadores;
	        this.temporadaRegular = temporadaRegular; // Initialize TemporadaRegular
	    }


	public void verificarPremiacoes() {
	    for (int i = 0; i < jogadores.size(); i++) {
	        if (jogadores.get(i).getMediaPontos() >= 28 && jogadores.get(i).getMediaAssistencias() >= 12) {
	            mvp.add(jogadores.get(i)); 
	        }

	        if (jogadores.get(i).getMediaRebotes() > 12 && jogadores.get(i).getMediaTocos() > 3 && jogadores.get(i).getMediaRoubos() > 2) {
	            dpoy.add(jogadores.get(i));
	        }
	    }
	}

	public ArrayList<String> listaNomesMvp() {
	    ArrayList<String> jogadoresMVP = new ArrayList<String>();
	    for (int i = 0; i < mvp.size(); i++) {
	        jogadoresMVP.add(mvp.get(i).getNome()); 
	    }
	    return jogadoresMVP;
	}

	public ArrayList<String> listaNomeDpoy() {
	    ArrayList<String> jogadoresDpoy = new ArrayList<String>();
	    for (int i = 0; i < dpoy.size(); i++) {
	        jogadoresDpoy.add(dpoy.get(i).getNome()); 
	    }
	    return jogadoresDpoy;
	}

}
